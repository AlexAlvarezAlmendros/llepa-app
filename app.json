{
  "expo": {
    "name": "Llepa - Gestión de Mascotas",
    "slug": "llepa-app",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": false,
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#4F46E5"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.alexalvarez.llepa",
      "infoPlist": {
        "NSLocationWhenInUseUsageDescription": "Necesitamos tu ubicación para rastrear tus paseos con tu mascota.",
        "NSLocationAlwaysAndWhenInUseUsageDescription": "Necesitamos tu ubicación para rastrear tus paseos con tu mascota incluso en segundo plano.",
        "NSMotionUsageDescription": "Necesitamos acceso a los sensores de movimiento para contar tus pasos durante los paseos."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#4F46E5"
      },
      "package": "com.alexalvarez.llepa",
      "permissions": [
        "android.permission.CAMERA",
        "android.permission.READ_EXTERNAL_STORAGE",
        "android.permission.WRITE_EXTERNAL_STORAGE",
        "android.permission.NOTIFICATIONS",
        "android.permission.ACCESS_FINE_LOCATION",
        "android.permission.ACCESS_COARSE_LOCATION",
        "android.permission.ACCESS_BACKGROUND_LOCATION",
        "android.permission.ACTIVITY_RECOGNITION",
        "android.permission.RECORD_AUDIO"
      ],
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      [
        "expo-image-picker",
        {
          "photosPermission": "La app necesita acceso a tus fotos para guardar imágenes de recetas y perfil de mascotas."
        }
      ],
      [
        "expo-notifications",
        {
          "color": "#4F46E5"
        }
      ],
      [
        "expo-location",
        {
          "locationAlwaysAndWhenInUsePermission": "Necesitamos tu ubicación para rastrear tus paseos con tu mascota."
        }
      ],
      [
        "expo-sensors",
        {
          "motionPermission": "Necesitamos acceso a los sensores de movimiento para contar tus pasos."
        }
      ]
    ],
    "extra": {
      "eas": {
        "projectId": "b1a8ebf1-3ed3-4683-9d8e-783046605aa7"
      }
    }
  }
}
